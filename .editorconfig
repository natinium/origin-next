# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# For more information, visit https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript and JavaScript files
[*.{ts,tsx,js,jsx,mjs}]
quote_type = single

# JSON files
[*.json]
insert_final_newline = false

# CSS, SCSS files
[*.{css,scss}]
quote_type = double

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML files
[*.{yml,yaml}]
quote_type = single

# HTML files
[*.{html,htm}]
quote_type = double

# Shell scripts
[*.sh]
end_of_line = lf

# Windows scripts
[*.{cmd,bat,ps1}]
end_of_line = crlf